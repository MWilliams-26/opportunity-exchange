    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "stripe": "^20.3.0"
  },
  "devDependencies": {
    "pino-pretty": "^13.1.3"
  }
}
