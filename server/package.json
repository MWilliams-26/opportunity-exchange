{
  "name": "opportunity-exchange-server",
  "version": "1.0.0",
  "description": "Backend API for Opportunity Exchange marketplace",
  "main": "src/index.js",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node src/index.js",
